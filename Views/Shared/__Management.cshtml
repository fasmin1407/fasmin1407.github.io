@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title></title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
  <link rel="stylesheet" href="~/css/index/style.css"/>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
    integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <style type="text/css">
      body{
        background-color: #191c24;
        color:white;
      }
      table {
          color:white;
      }
      .user{
        display: flex;
      }
      .user *{
        color: white;
      }
      .nav-admin a{
        width: 100%;
      }
      .text-red{
        color: #eb1616;
      }
      .link-ad{
        text-decoration: none;
        color: white;
      }
      .nav-admin a:hover{
        background-color: black;
        border-bottom-right-radius: 100%;
        border-top-right-radius: 100%;
        border-left: 2px solid red;
        color: #eb1616;
      }
      .sign-in{
          background-color: #191c24;
          border:none;
      }
    </style>
</head>
<body class="row col-lg-12">

  <nav class="col-lg-3 row">
      <span ><i class="fa fa-book mt-4 ml-4 text-red" style="font-size: 3em;" aria-hidden="true">Manager</i></span>
        <div class="user mt-2 ml-2">
          <i class="fa fa-user-circle col-lg-3 mt-2" style="font-size: 2em;" aria-hidden="true"></i>
          <div>
                <span class="col-lg-12 font-weight-bold">@User.Identity.Name</span>
                <span class="col-lg-12 ml-2 mt-2">Admin</span>
            </div>
        </div>
        <div class="nav-admin col-lg-12 row  mt-3">
          <a class="pt-3 pb-3 pl-4 link-ad" asp-controller="Customer" asp-action="DashBoard"><i class="fa fa-arrow-right" aria-hidden="true">Dashboard</i></a>
          <a class="pt-3 pb-3 pl-4 link-ad" asp-controller="Customer" asp-action="ListAccountStoreOwner"><i class="fa fa-arrow-right" aria-hidden="true">Store Owner Account</i></a>
          <a class="pt-3 pb-3 pl-4 link-ad" asp-controller="Customer" asp-action="ListAccountCustomer"><i class="fa fa-arrow-right" aria-hidden="true">Customer Account</i></a>
          <a class="pt-3 pb-3 pl-4 link-ad" asp-controller="Category" asp-action="ListRequest"><i class="fa fa-arrow-right" aria-hidden="true">Request</i></a>
        </div>
  </nav>
  <main class="col-lg-9 row">
      <header class="col-lg-12 row">
          <div class="col-lg-10 mt-4 pt-3">
            <form>
            <input type="search" name="" placeholder="Enter a book's name ..." style="width: 300px;">
            </form>
          </div>
          <div class="col-lg-2 mt-4 pt-3">
              <form  class="pr-1 mr-5 mt-2" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" >
                    <button type="submit" class="link-ad sign-in"><i class="fa fa-reply" aria-hidden="true">Sign-out</i></button>
                </form>
                  </div>
      </header>
      
     <div class="col-lg-12 row">
         <div style="background:gray;" class="col-lg-12">
             <div class="mx-3 mt-3 pb-3" style="background-color: #191c24;">
                    @RenderBody()
             </div>
         </div>
     </div>
  </main>
  

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>