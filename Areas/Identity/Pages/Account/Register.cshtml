@page
@model RegisterModel

@{
    ViewData["Title"] = "Log in";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPTBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/index/demo.css" />
    <link rel="stylesheet" href="~/css/index/style.css" />
</head>
    <style>
        body {
            background-image: url(https://mdbootstrap.com/img/new/fluid/city/008.jpg);
            width: 100%;
            height: 100%;
            background-size: cover;        
        }
    </style>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

<body>
    <!-- Background image -->
        <div >
            <div >
            <div class="container">
                    <div class="row justify-content-center" style="padding-top: 50px; padding-bottom: 30px">
                    <div class="col-xl-10 col-md-10" style="padding-top: 50px; padding-bottom: 50px">
                            <form class="bg-white rounded shadow-5-strong p-5" style="width:500px" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <h1 class="text-center">Register</h1>
                            <!-- Email input -->
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <!-- Password input -->
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                       
                            <!-- Submit button -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Sign in</button>
                            </div>
                                <div class="row mb-2">
                                    <div class="col">
                                        <!-- Simple link -->
                                        <a type="submit" id="login" asp-page="./Login">You have an account?</a>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
    <!-- Background image -->
</html>
